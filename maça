package Tarefa2;

import java.util.Scanner;

public class Maças {
    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Quantidade de maçãs:");
        double macas = scanner.nextInt();

        if (macas > 12){
            double valorTotal = macas * 1.00;
            System.out.println("Valor a ser pago: R$"+ valorTotal);
        } else {
            System.out.println("Valor a ser pago: R$"+ macas * 1.60);
        }
        scanner.close();
    }
}
